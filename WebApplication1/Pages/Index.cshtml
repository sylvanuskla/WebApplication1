@page
@model IndexModel
@{
    ViewData["Title"] = "Page d'accueil";
}

<h2>Liste des personnes</h2>
<div class="container">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Age</th>
            </tr>
            
        </thead>

        <tbody>
            @{
                foreach (WebApplication1.Person item in Model.Persons)
                {
                        <tr>
                            <td>@item.Nom</td>
                            <td>@item.Prenom</td>
                            <td>@item.Age</td>
                        </tr>
                }
            }
        </tbody>
    </table>
</div>